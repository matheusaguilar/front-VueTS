{
    "include": [
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es5",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "_Components/*": [
                "src/components/*"
            ],
            "_Assets/*": [
                "dist/assets/*"
            ],
            "_PagesSrc/*": [
                "src/pages_src/*"
            ],
            "_Tests/*": [
                "src/test/*"
            ]
        }
    }
}